@model CrudMVC.Models.Contacto

@{
    ViewBag.Title = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4>Modificar Contacto</h4>
            </div>

            <div class="panel-body">
                <form action="@Url.Action("Modificar","Contactos")" method="post">
                    
                    <input type="hidden" class="form-control" name="IdContacto" value="@Html.DisplayFor(m=>m.IdContacto)" />
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombre" value="@Html.DisplayFor(m=>m.Nombre)" />
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Apellido" value="@Html.DisplayFor(m=>m.Apellido)"/>
                    </div>
                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="text" class="form-control" name="Telefono" value="@Html.DisplayFor(m=>m.Telefono)"/>
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="email" class="form-control" name="Correo" value="@Html.DisplayFor(m=>m.Correo)"/>
                    </div>

                    <button type="submit" class="btn btn-primary" >Guardar</button>

                    <a class="btn btn-warning" href="@Url.Action("Inicio","Contactos")">Volver</a>

                </form>

            </div>
        </div>

    </div>

</div>

